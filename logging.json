{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "c_report": {
      "format": "[%(levelname)-7s]: %(message)s"
    },
    "f_report": {
      "format": "%(asctime)s.%(msecs)03d - [%(levelname)-7s]: %(message)s",
      "datefmt":"%Y-%m-%d %H:%M:%S"
    },
    "d_report": {
      "format": "%(asctime)s.%(msecs)03d - %(filename)s - %(funcName)s - %(lineno)4d - [%(levelname)-7s]: %(message)s",
      "datefmt":"%Y-%m-%d %H:%M:%S"
    }
  },

  "handlers": {
    "info_console": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "c_report",
      "stream": "ext://sys.stdout"
    },

    "info_file_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "f_report",
      "filename": "info.log",
      "maxBytes": 10485760,
      "backupCount": 20,
      "encoding": "utf8"
    },

    "debug_console": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "d_report",
      "stream": "ext://sys.stdout"
    },

    "debug_file_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "d_report",
      "filename": "debug.log",
      "maxBytes": 10485760,
      "backupCount": 20,
      "encoding": "utf8"
    }
  },

  "loggers": {
    "default": {
      "level": "INFO",
        "handlers": ["info_console", "info_file_handler"],
      "propagate": false
    },

    "debug": {
      "level": "DEBUG",
        "handlers": ["debug_console", "debug_file_handler"],
      "propagate": false
    }
  },

  "root": {
    "level": "INFO",
    "handlers": ["info_console", "info_file_handler", "debug_console", "debug_file_handler"]
  }
}
